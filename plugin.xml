<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-dynamicappicon"
        version="1.0.0"
        xmlns="http://apache.org/cordova/ns/plugins"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <name>Dynamic App Icon</name>

    <!-- JS interface -->
    <js-module src="www/DynamicIcon.js" name="DynamicIcon">
        <clobbers target="DynamicIcon" />
    </js-module>

    <platform name="android">

        <!-- Register Cordova plugin -->
        <config-file target="config.xml" parent="/*">
            <feature name="DynamicIcon">
                <param name="android-package"
                       value="com.dynamicappicon.plugin.DynamicIcon" />
            </feature>
        </config-file>

        <!-- =============================== -->
        <!-- ALL launcher aliases DISABLED -->
        <!-- =============================== -->
        <config-file target="AndroidManifest.xml"
                     parent="/manifest/application">

            <activity-alias
                android:name=".IconNormal"
                android:enabled="false"
                android:exported="true"
                android:icon="@mipmap/ic_launcher_normal"
                android:targetActivity="${applicationId}.MainActivity" />

            <activity-alias
                android:name=".IconPremium"
                android:enabled="false"
                android:exported="true"
                android:icon="@mipmap/ic_launcher_premium"
                android:targetActivity="${applicationId}.MainActivity" />

            <activity-alias
                android:name=".IconPrivate"
                android:enabled="false"
                android:exported="true"
                android:icon="@mipmap/ic_launcher_private"
                android:targetActivity="${applicationId}.MainActivity" />

        </config-file>

        <!-- ========================= -->
        <!-- ICON RESOURCES (REQUIRED) -->
        <!-- ========================= -->

        <!-- NORMAL -->
        <resource-file src="src/android/res/mipmap-mdpi/ic_launcher_normal.png"
                       target="res/mipmap-mdpi/ic_launcher_normal.png" />
        <resource-file src="src/android/res/mipmap-hdpi/ic_launcher_normal.png"
                       target="res/mipmap-hdpi/ic_launcher_normal.png" />
        <resource-file src="src/android/res/mipmap-xhdpi/ic_launcher_normal.png"
                       target="res/mipmap-xhdpi/ic_launcher_normal.png" />
        <resource-file src="src/android/res/mipmap-xxhdpi/ic_launcher_normal.png"
                       target="res/mipmap-xxhdpi/ic_launcher_normal.png" />
        <resource-file src="src/android/res/mipmap-xxxhdpi/ic_launcher_normal.png"
                       target="res/mipmap-xxxhdpi/ic_launcher_normal.png" />

        <!-- PREMIUM -->
        <resource-file src="src/android/res/mipmap-mdpi/ic_launcher_premium.png"
                       target="res/mipmap-mdpi/ic_launcher_premium.png" />
        <resource-file src="src/android/res/mipmap-hdpi/ic_launcher_premium.png"
                       target="res/mipmap-hdpi/ic_launcher_premium.png" />
        <resource-file src="src/android/res/mipmap-xhdpi/ic_launcher_premium.png"
                       target="res/mipmap-xhdpi/ic_launcher_premium.png" />
        <resource-file src="src/android/res/mipmap-xxhdpi/ic_launcher_premium.png"
                       target="res/mipmap-xxhdpi/ic_launcher_premium.png" />
        <resource-file src="src/android/res/mipmap-xxxhdpi/ic_launcher_premium.png"
                       target="res/mipmap-xxxhdpi/ic_launcher_premium.png" />

        <!-- PRIVATE -->
        <resource-file src="src/android/res/mipmap-mdpi/ic_launcher_private.png"
                       target="res/mipmap-mdpi/ic_launcher_private.png" />
        <resource-file src="src/android/res/mipmap-hdpi/ic_launcher_private.png"
                       target="res/mipmap-hdpi/ic_launcher_private.png" />
        <resource-file src="src/android/res/mipmap-xhdpi/ic_launcher_private.png"
                       target="res/mipmap-xhdpi/ic_launcher_private.png" />
        <resource-file src="src/android/res/mipmap-xxhdpi/ic_launcher_private.png"
                       target="res/mipmap-xxhdpi/ic_launcher_private.png" />
        <resource-file src="src/android/res/mipmap-xxxhdpi/ic_launcher_private.png"
                       target="res/mipmap-xxxhdpi/ic_launcher_private.png" />

        <!-- Java source -->
        <source-file
            src="src/android/com/dynamicappicon/plugin/DynamicIcon.java"
            target-dir="src/com/dynamicappicon/plugin" />

    </platform>

</plugin>
